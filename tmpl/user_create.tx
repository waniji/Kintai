: cascade "include/layout.tx"

: override content -> {

<h2>ユーザー作成</h2>

<form method="post" action="<: uri_for('/user/create') :>">
  Name <input type="text" name="name" />
  <input type="submit" value="send" />
</form>

<hr />

<h2>ユーザー一覧</h2>

<hr />

: for $users -> $user {
    <p><a href="kintai?user_id=<: $user.id :>"><: $user.name :></a></p>
: }

: }
